<div class="grid-wrapper text-center">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <h2>Grid</h2>
        <div class="grid-container">
          <% @grid.each do |letter| %>
            <div><%= letter %></div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <form action="/score" method="POST">
          <div class="form-group">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <%= hidden_field_tag :grid, @grid %>
            <%= hidden_field_tag :start_time, Time.now %>
            <label for="word" value="OlÃ¡" />
            <input type="text" name="word" class="form-control" placeholder="Type a word.">
          </div>
          <input type="submit" class="btn btn-primary" />
        </form>
      </div>
    </div>
  </div>
</div>
